<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    
    <LinearLayout 
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:weightSum="3"
        android:orientation="vertical">
        
        <LinearLayout 
            android:id="@+id/startTop"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2">
            
            <TextView 
                android:id="@+id/startTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="1:00"/>
            
            <TextView 
                android:id="@+id/startTimePeriod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="PM"/>
            
            <ImageView 
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/plane_icon_up"/>
            
        </LinearLayout>
        
        <TextView 
            android:id="@+id/startBottom"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Los Angeles"/>
        
    </LinearLayout>
    
    
    
    <LinearLayout 
        android:id="@+id/dest"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:weightSum="3"
        android:orientation="vertical">
        
        <LinearLayout 
            android:id="@+id/destTop"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2">
            
            <TextView 
                android:id="@+id/destTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="2:27"/>
            
            <TextView 
                android:id="@+id/destTimePeriod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="PM"/>
            
            <ImageView 
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/plane_icon_down"/>
            
        </LinearLayout>
        
        <TextView 
            android:id="@+id/destBottom"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Pittsburgh"/>
        
    </LinearLayout>
    
    
    
    
    

</LinearLayout>